        android:orientation="horizontal"
        android:padding="@dimen/semi_padding"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_user_history_monthly_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.75"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/year"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/quad_margin"
            android:background="@color/users_home_btn_strock" />

        <TextView
            android:id="@+id/tv_user_history_monthly_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.25"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/month"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/quad_margin"
        android:background="@color/users_home_btn_strock" />

